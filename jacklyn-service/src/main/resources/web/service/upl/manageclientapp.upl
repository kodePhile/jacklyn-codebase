!ui-page caption:$m{service.clientapp.manage}
    searchByList:$c{searchName searchDescription searchStatus}
    searchClearList:$c{searchName searchDescription searchStatus}
    tableColumnList:$c{name description typeDesc statusDesc}
    formSection:$d{!ui-section caption:$m{service.clientapp.section.basicdetails} components:$c{frmName frmDescription frmType frmStatus}}
    formSection:$d{!ui-section caption:$m{service.clientapp.section.assets} components:$c{frmAssetAttachment}}
    formBinding:largeData
    addPrivilege:$s{srv-clientappadd} editPrivilege:$s{srv-clientappedit}
    viewPrivilege:$s{srv-clientappview} deletePrivilege:$s{srv-clientappdelete}
    addValidations:$c{frmNameVal frmDescVal}
    saveValidations:$c{frmNameVal frmDescVal}

//Search
!ui-text:searchName caption:$m{service.clientapp.name} case:upper binding:searchName
    eventHandler:$d{!ui-event event:onenter action:$c{searchAct}}
!ui-text:searchDescription caption:$m{service.clientapp.description} binding:searchDescription
    eventHandler:$d{!ui-event event:onenter action:$c{searchAct}}
!ui-select:searchStatus caption:$m{service.clientapp.status} binding:searchStatus list:recordstatuslist blankOption:$s{}
    eventHandler:$d{!ui-event event:onchange action:$c{searchAct}}

//Table columns
!ui-label:name caption:$m{service.clientapp.name} binding:name  columnStyle:$s{width:120px;} sortable:true
!ui-label:description caption:$m{service.clientapp.description} binding:description  columnStyle:$s{width:200px;} sortable:true
!ui-label:typeDesc caption:$m{service.clientapp.type} binding:typeDesc style:$s{text-align:center;} columnStyle:$s{width:100px;} sortable:true
!ui-label:statusDesc caption:$m{service.clientapp.status} binding:statusDesc style:$s{text-align:center;} columnStyle:$s{width:100px;} sortable:true

//Form components   
!ui-name:frmName caption:$m{service.clientapp.name} binding:data.name focus:true
    dollar:true underscore:true period:true dash:true minLen:3 maxLen:32 required:true
!ui-text:frmDescription caption:$m{service.clientapp.description} binding:data.description maxLen:48 size:40 required:true
!ui-select:frmType caption:$m{service.clientapp.type} binding:data.type list:clientapptypelist blankOption:$s{} required:true
!ui-select:frmStatus caption:$m{service.clientapp.status} binding:data.status list:recordstatuslist blankOption:$s{} required:true

!ui-panel:frmAssetAttachment layout:$d{!ui-vertical} components:$c{assetAssignmentBox}
!ui-assignmentbox:assetAssignmentBox binding:systemAssetIdList
    filterCaption1:$m{service.clientapp.type}
    filterCaption2:$m{service.clientapp.module}
    assignCaption:$m{service.clientapp.asset.assigned}
    unassignCaption:$m{service.clientapp.asset.available}
    filterList1:$s{systemassettypelist} filterList2:$s{modulelist}
    assignList:$s{systemassetinlist} unassignList:$s{systemassetnotinlist}

//Validations
!ui-uniquevalidation:frmNameVal components:$c{frmName}
!ui-uniquevalidation:frmDescVal components:$c{frmDescription}
